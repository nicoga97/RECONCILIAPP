<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".Conoce">

    <TextView
        android:id="@+id/textViewKnowReco"
        android:layout_width="295dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:text="CONOCE RECONCILIAPP"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFirstKnow"
        android:layout_width="293dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="ReconciliApp Bogotá, es una aplicación que busca conectar a las personas con un universo de oportunidades que brindarán diferentes aliados, permitiendo mejorar la calidad de viida, aportando a la reconstrucción de tejido social y aportando a la reconciliación con la ciudad."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKnowReco" />

    <TextView
        android:id="@+id/textViewSecondKown"
        android:layout_width="293dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="La APP funciona a través de una match, entre la necesidad y la oportunidad, en este caso entre el usuario y las entidades o programas, ya sean de empresas públicas, privadas, organizaciones sociales, entre otras, que harán parte de nuestra plataforma y que ayudarán a solventar las necesdades inmediatas de quienes lo requieran o lo utilicen."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstKnow" />

    <TextView
        android:id="@+id/textViewThridKnow"
        android:layout_width="293dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Aqui podrás encontrar rutas de atención, oportunidades laborales, oportunidades de estudio, guarderías, encuentros y eventos, un bando de historias que recoje memorias del conflicto y mucho mas! ¿Qué esperas para registrarte y hacer parte de reconciliapp?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondKown" />

    <Button
        android:id="@+id/buttonRegisterKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/secondaryColor"
        android:onClick="sendRegister"
        android:text="Registrate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>